{
	"manifest_version": 2,

	"name": "Sample Extension - üëç Github Tools",
	"short_name": "üëç Github Tools",
	"description": "Opens github.io (Github Pages) link from blob, and vice versa from github.com",
	"version": "0.1",
	"author": "Owen Mundy",
	"icons": {
		"16": "assets/img/icon-16x16.png",
		"32": "assets/img/icon-32x32.png",
		"48": "assets/img/icon-48x48.png",
		"128": "assets/img/icon-128x128.png"
	},

	"browser_action": {
		"default_icon": {
			"16": "assets/img/icon-16x16.png",
			"32": "assets/img/icon-32x32.png",
			"48": "assets/img/icon-48x48.png",
			"128": "assets/img/icon-128x128.png"
		},
		"default_title": "Github tools",
		"default_popup": "pages/popup.html"
	},
	"background": {
		"scripts": [
			"assets/js/background.js"
		]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": [
			"assets/libs/mousetrap.min.js",
			"assets/js/content.js"
		],
		"css": [
			"assets/css/styles.css"
		],
		"run_at": "document_end"
	}],

	"permissions": [
		"https://*.github.com/*",
		"https://*.github.io/*",
		"activeTab",
		"storage",
		"management"
	],
	"web_accessible_resources": [
		"*.svg", "*.png",
		"*.jpg", "*.JPG",
		"*.gif", "*.GIF",
		"/assets/*"
	],
	"content_security_policy": "script-src 'self'; object-src 'self';"
}
